#include <stdio.h>
int sum(int a[][5],int size){
	int i,j,result;
	for(j=0;j<5;j++){
		result=0;
		for(i=0;i<size;i++){
			result+=a[i][j];
		}
		printf("%d ", result);
	}
	return result;	
}
int main(){
	int myarr[3][5];
	int i,j;
	printf("Write numbers please:\n");
	for(i=0;i<3;i++){
		for(j=0;j<5;j++){
			scanf("%d", &myarr[i][j]);
		}
	}
	printf("\n");
	for(i=0;i<3;i++){
		for(j=0;j<5;j++){
			printf("%d ", myarr[i][j]);
		}
		printf("\n");
	}
	printf("\n");
	sum(myarr,3);
	return 0;
}
